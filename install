#!/usr/bin/env bash
[[ "$1" == "pkg-update" ]] && yay -Qe | awk '{print $1}' > packages.yay && exit

ln -sf $(pwd)/kitty ~/.config
ln -sf $(pwd)/nvim ~/.config
mkdir -p '~/.config/Code - OSS/User'
ln -sf $(pwd)/extras/code.json '~/.config/Code - OSS/User/settings.json'
ln -sf $(pwd)/extras/zshrc ~/.zshrc
mkdir -p ~/.local/bin
ln -sf $(pwd)/extras/chrono ~/.local/bin
ln -sf $(pwd)/extras/emoji ~/.local/bin

