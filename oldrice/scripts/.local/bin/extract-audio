#!/usr/bin/env bash
mkdir -p audio

video_extensions=(webm mkv mp4)
audio_extensions=(opus opus aac)

for i in {1..3}
do
	video_actual=".${video_extensions[i-1]}"
	audio_actual=".${audio_extensions[i-1]}"
	for f in *$video_actual
	do
		ffmpeg -i "$f" -vn -acodec copy "audio/$(echo ${f%$video_actual}$audio_actual)"
		rm -rf "$f"
	done
done
