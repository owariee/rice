#!/usr/bin/env bash

function date-command() {
  date +'%Y-%m-%d %l:%M:%S %p'
}

function volume-command() {
  SINK=$(pactl get-default-sink)
  OUTPUT=$(pactl get-sink-volume $SINK)
  echo $OUTPUT | cut -d / -f 2 | head -n 1 | tr -d ' '
}

DATE_COMMAND="🍃 $(date-command)"
VOLUME_COMMAND="🔊 $(volume-command)"

echo "$VOLUME_COMMAND $DATE_COMMAND"
