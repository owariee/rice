exec --no-startup-id autotiling

### Workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 10

set $left-monitor DP-2
set $right-monitor DVI-D-1
 
workspace $ws1 output $left-monitor
workspace $ws2 output $left-monitor
workspace $ws3 output $left-monitor
workspace $ws4 output $left-monitor
workspace $ws5 output $left-monitor
workspace $ws6 output $left-monitor
workspace $ws7 output $right-monitor
workspace $ws8 output $right-monitor
workspace $ws9 output $right-monitor
workspace $ws0 output $right-monitor

