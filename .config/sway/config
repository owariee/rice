### Keybinding alias
set $mod Mod4
set $alt Mod1

floating_modifier $mod normal
bindsym $alt+w exec firefox
bindsym $alt+m exec discord
bindsym $alt+f exec thunar
bindsym $alt+c exec code
bindsym $alt+e exec libreoffice
bindsym $alt+n exec kitty --class=music ncmpcpp
bindsym $alt+t exec thunderbird
bindsym $alt+o exec flatpak run com.obsproject.Studio
bindsym $alt+Return exec kitty
bindsym $alt+g exec gimp
bindsym $alt+q exec qbittorrent
bindsym $alt+i exec kitty --class=mixer pulsemixer
bindsym $alt+s exec steam
bindsym $alt+p exec passmenu
bindsym $alt+d exec bemenu-run -l 16 -m 1
bindsym $alt+F10 exec setwall
bindsym $alt+Print exec grimshot copy area
bindsym $alt+F1 exec pactl set-source-mute @DEFAULT_SINK@ toggle
bindsym $alt+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $alt+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $alt+F4 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $alt+F5 exec mpc stop
bindsym $alt+F6 exec mpc prev
bindsym $alt+F7 exec mpc toggle
bindsym $alt+F8 exec mpc next
bindsym $mod+q kill
bindsym $mod+r reload
bindsym $mod+e exit
bindsym $mod+f fullscreen
bindsym $mod+space floating toggle
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Control+h resize grow width 10px
bindsym $mod+Control+j resize shrink height 10px
bindsym $mod+Control+k resize grow height 10px
bindsym $mod+Control+l resize shrink width 10px
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws0
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace $ws8
