#!/usr/bin/env bash

if [ -z "$1" ]
then
INPUT="input9"
else
INPUT=$1
fi

if [ -z "$2" ]
then
TIMES=5
else
TIMES=$2
fi

KEYBOARD_LIGHTS=(numlock capslock scrolllock)

for j in $(seq 1 $TIMES)
do
	for i in "${KEYBOARD_LIGHTS[@]}"
	do
		for x in {1..0}
		do
			echo $x | sudo tee /sys/class/leds/$INPUT::$i/brightness >/dev/null
			sleep 0.2s
		done
	done
done
